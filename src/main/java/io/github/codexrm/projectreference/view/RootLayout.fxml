<VBox prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #dcdcdc;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MenuBar nodeOrientation="LEFT_TO_RIGHT" style="-fx-background-color: #c9c9c9;" VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Fichero">
                    <items>
                  <MenuItem mnemonicParsing="false" onAction="#addReference" text="Adicionar" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                        <Menu mnemonicParsing="false" text="Importar">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#importBibTex" text="BibTeX" />
                                <MenuItem mnemonicParsing="false" onAction="#importRis" text="Ris" />
                            </items>
                        </Menu>
                  <Menu mnemonicParsing="false" text="Exportar">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#exportBibTex" text="Bib TeX" />
                        <MenuItem mnemonicParsing="false" onAction="#exportRis" text="Ris" />
                    </items>
                  </Menu>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#save" text="Salvar" />
                        <MenuItem mnemonicParsing="false" onAction="#sync" text="Sincronizar Librería" />
                        <MenuItem mnemonicParsing="false" onAction="#logout" text="Cerrar Sesion" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <ToolBar prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #d3d3d3;">
         <items>
            <MFXButton buttonType="RAISED" onAction="#addReference" style="-fx-background-color: #0cb7f2;" text="Adicionar" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </MFXButton>
            <MFXButton buttonType="RAISED" onAction="#deleteReference" style="-fx-background-color: #0cb7f2;" text="Eliminar">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </MFXButton>
            <MFXButton buttonType="RAISED" onAction="#save" style="-fx-background-color: #0cb7f2;" text="Salvar">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </MFXButton>
            <MFXButton buttonType="RAISED" onAction="#sync" style="-fx-background-color: #0cb7f2;" text="Sincronizar">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </MFXButton>
         </items>
        </ToolBar>
        <SplitPane dividerPositions="0.2505567928730512, 0.5" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" style="-fx-background-color: C9C9C9;" VBox.vgrow="ALWAYS">
            <items>
            <AnchorPane prefHeight="545.0" prefWidth="53.0" style="-fx-background-color: #c9c9c9;" />
                <AnchorPane prefHeight="545.0" prefWidth="481.0" style="-fx-background-color: #000000;">
               <children>
                          <TableView fx:id="referenceTable" layoutX="-8.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="547.0" prefWidth="499.0" style="-fx-background-color: #ffffff;" AnchorPane.bottomAnchor="-2.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                              <columns>
                                  <TableColumn fx:id="yearColumn" prefWidth="75.0" sortable="false" text="Año">
                                      <cellValueFactory>
                                          <PropertyValueFactory property="year" />
                                      </cellValueFactory>
                                  </TableColumn>
                                  <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Título">
                                      <cellValueFactory>
                                          <PropertyValueFactory property="title" />
                                      </cellValueFactory>
                                  </TableColumn>
                              </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                          </TableView>
               </children></AnchorPane>
                <AnchorPane fx:id="referenceDetail" prefHeight="545.0" prefWidth="412.0" style="-fx-background-color: #c9c9c9;">
               <children>
                  <Label fx:id="noReferenceDetailInfo" prefHeight="547.0" prefWidth="306.0" style="-fx-alignment: center;" text="No reference selected" AnchorPane.bottomAnchor="-2.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children></AnchorPane>
            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Left status" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="11.0" fx:id="x3" />
                    </font>
                    <textFill>
                        <Color red="0.625" green="0.625" blue="0.625" fx:id="x4" />
                    </textFill>
                </Label>
                <Pane style="-fx-background-color: #c9c9c9;" HBox.hgrow="ALWAYS" />
                <Label font="$x3" maxWidth="-1.0" text="Right status" textFill="$x4" HBox.hgrow="NEVER" />
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </children>
</VBox>
